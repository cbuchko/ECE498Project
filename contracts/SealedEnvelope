pragma solidity >=0.7.0 <0.9.0;

/**
 * @title SealedEnvelope
 */
contract SealedEnvelope {

    address public winner_addr;
    address seller_addr;
    uint reveal_time;
    uint public good;

    // Add a bid and place the bid amount in escrow
    function ExecuteBid(uint256 amount) public payable {
    }

    // Allows the winner of the auction to claim their good
    function ClaimGood() public {
    }

    // Allows losers of the auction to withdraw their bids from escrow
    function WithdrawLosingBid() public{
    }

    // Determine the winner of the auction
    function RevealWinner() public{
    }

    // Return losing bids and good to winning bidder
    function FinishAuction() public {
    }
}
